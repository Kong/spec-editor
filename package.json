{
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "config": {
    "commitizen": {
      "jiraAppend": "]",
      "jiraLocation": "post-description",
      "jiraOptional": true,
      "jiraPrepend": "[",
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false
    }
  },
  "dependencies": {
    "@guolao/vue-monaco-editor": "^1.5.4",
    "@kong/icons": "^1.20.4",
    "@kong/kongponents": "^9.18.5",
    "@kong/spec-renderer-dev": "^1.86.2",
    "@vueuse/core": "^12.5.0",
    "splitpanes": "^3.1.8",
    "vue": "^3.5.13"
  },
  "description": "Live editor for Kong's open-source spec renderer",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@evilmartians/lefthook": "^1.10.10",
    "@kong/design-tokens": "^1.17.2",
    "@kong/eslint-config-kong-ui": "1.2.4",
    "@stylistic/stylelint-plugin": "^3.1.1",
    "@types/node": "^22.10.10",
    "@types/splitpanes": "^2.2.6",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-typescript": "^14.3.0",
    "@vue/tsconfig": "^0.7.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.19.0",
    "eslint-plugin-vue": "^9.32.0",
    "npm-run-all2": "^7.0.2",
    "sass": "^1.83.4",
    "sass-embedded": "^1.83.4",
    "stylelint": "^16.14.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-recommended-vue": "^1.6.0",
    "stylelint-order": "^6.0.4",
    "typescript": "~5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-vue-devtools": "^7.7.1",
    "vue-tsc": "^2.2.0"
  },
  "name": "@kong/spec-editor",
  "private": true,
  "scripts": {
    "build": "run-p typecheck \"build-only {@}\" --",
    "build-only": "vite build",
    "commit": "cz",
    "dev": "vite",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "preview": "vite preview",
    "stylelint": "stylelint --allow-empty-input './src/**/*.{css,scss,vue}'",
    "stylelint:fix": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,vue}' --fix",
    "typecheck": "vue-tsc -p './tsconfig.json' --noEmit"
  },
  "type": "module",
  "version": "0.0.0",
  "volta": {
    "node": "22.13.1",
    "pnpm": "10.1.0"
  }
}
