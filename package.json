{
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "config": {
    "commitizen": {
      "jiraAppend": "]",
      "jiraLocation": "post-description",
      "jiraOptional": true,
      "jiraPrepend": "[",
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false
    }
  },
  "dependencies": {
    "@kong/icons": "^1.33.2",
    "@kong/kongponents": "^9.37.2",
    "@kong/spec-renderer": "^1.98.20",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-ruleset-bundler": "^1.6.3",
    "@vueuse/core": "^13.5.0",
    "splitpanes": "^4.0.4",
    "vue": "^3.5.17"
  },
  "description": "Live editor for Kong's open-source spec renderer",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@evilmartians/lefthook": "^1.11.16",
    "@kong/design-tokens": "^1.18.0",
    "@kong/eslint-config-kong-ui": "1.5.1",
    "@shikijs/monaco": "^3.9.1",
    "@stoplight/types": "^14.1.1",
    "@stylistic/stylelint-plugin": "^3.1.3",
    "@types/node": "^22.17.0",
    "@types/splitpanes": "^2.2.6",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.32.0",
    "eslint-plugin-vue": "^10.4.0",
    "monaco-editor": "^0.52.2",
    "npm-run-all2": "^8.0.4",
    "sass": "^1.89.2",
    "sass-embedded": "^1.89.2",
    "shiki": "^3.9.1",
    "stylelint": "^16.23.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-order": "^7.0.0",
    "typescript": "~5.9.2",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^3.0.4"
  },
  "name": "@kong/spec-editor",
  "private": true,
  "scripts": {
    "build": "run-p typecheck \"build-only {@}\" --",
    "build-only": "vite build",
    "commit": "cz",
    "dev": "vite",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "preview": "vite preview",
    "stylelint": "stylelint --allow-empty-input './src/**/*.{css,scss,vue}'",
    "stylelint:fix": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,vue}' --fix",
    "typecheck": "vue-tsc -p './tsconfig.json' --noEmit"
  },
  "type": "module",
  "version": "0.0.0",
  "volta": {
    "node": "22.18.0",
    "pnpm": "10.14.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@evilmartians/lefthook",
      "@parcel/watcher",
      "esbuild",
      "vue-demi"
    ]
  }
}
