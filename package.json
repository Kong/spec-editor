{
  "author": {
    "name": "Kong Inc.",
    "url": "https://konghq.com/"
  },
  "config": {
    "commitizen": {
      "jiraAppend": "]",
      "jiraLocation": "post-description",
      "jiraOptional": true,
      "jiraPrepend": "[",
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "skipScope": false
    }
  },
  "dependencies": {
    "@kong/icons": "^1.41.0",
    "@kong/kongponents": "^9.48.8",
    "@kong/spec-renderer": "^1.102.1",
    "@stoplight/spectral-core": "^1.20.0",
    "@stoplight/spectral-ruleset-bundler": "^1.6.3",
    "@vueuse/core": "^13.9.0",
    "splitpanes": "^4.0.4",
    "vue": "^3.5.25"
  },
  "description": "Live editor for Kong's open-source spec renderer",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@evilmartians/lefthook": "^1.13.6",
    "@kong/design-tokens": "^1.18.2",
    "@kong/eslint-config-kong-ui": "1.6.0",
    "@shikijs/monaco": "^3.15.0",
    "@stoplight/types": "^14.1.1",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/node": "^24.10.4",
    "@types/splitpanes": "^2.2.6",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.6.1",
    "monaco-editor": "^0.55.1",
    "npm-run-all2": "^8.0.4",
    "sass": "^1.94.2",
    "sass-embedded": "^1.93.3",
    "shiki": "^3.15.0",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-order": "^7.0.1",
    "typescript": "~5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.1.5"
  },
  "name": "@kong/spec-editor",
  "private": true,
  "scripts": {
    "build": "run-p typecheck \"build-only {@}\" --",
    "build-only": "vite build",
    "commit": "cz",
    "dev": "vite",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "preview": "vite preview",
    "stylelint": "stylelint --allow-empty-input './src/**/*.{css,scss,vue}'",
    "stylelint:fix": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,vue}' --fix",
    "typecheck": "vue-tsc -p './tsconfig.json' --noEmit"
  },
  "type": "module",
  "version": "0.0.0",
  "volta": {
    "node": "24.12.0",
    "pnpm": "10.15.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@evilmartians/lefthook",
      "@parcel/watcher",
      "esbuild",
      "vue-demi"
    ],
    "overrides": {
      "vue@>=2.0.0-alpha.1 <3.0.0-alpha.0": ">=3.0.0-alpha.0",
      "dompurify@<3.2.4": ">=3.2.4",
      "tmp@<=0.2.3": ">=0.2.4",
      "form-data@>=4.0.0 <4.0.4": ">=4.0.4"
    }
  }
}
